<div class="container-fluid">
<h1>Crush, The Card Game</h1>

<div class=>
  <button type="button" class="btn btn-success">
    <%= link_to 'Start a New Game', new_game_path %>
  </button>
</p>

<p>
<% if @_current_user %>
  Your Current User: <%= @_current_user %>
<% end %>
</p>

<h3>Current Games</h3>

<table class="table">
  <thead class="" >
    <tr>
      <th>Name</th>
      <th>Round</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-striped">
  <% @games.order(:updated_at).each do |game| %>
    <tr>
      <td><%= game.name %></td>
      <td><%= "#{10 - game.state_data[:rounds_played]}" %></td>
      <td><%= link_to('Join', game, data: { no_turbolink: true }) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

</div>
