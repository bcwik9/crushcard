#rules-modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header{style: "height: 50px;"}
        %h4.modal-title.pull-left Game Rules & Options

        = link_to "#", class: "close pull-right", style: "float: right", data: { dismiss: "modal"} do
          %h4{style: "color: black !important;"} X
      .modal-body
        %p.text-center{style: "margin-bottom: 20px;"}
          = link_to "View/Read the Rules", root_path(anchor: "#rules"), target: "_blank", class: "btn btn-lg btn-success"
        %table.text-center{style: "margin: 0 auto;"}
          %thead
            %tr
              %th{style: "padding-right: 20px;"}
                %h4{style: 'margin-bottom: 15px;'} Special Options
              %th{style: "padding-left: 20px;"}
                %h4{style: 'margin-bottom: 15px;'} Selected
          %tbody
            - Game::OPTIONS.each do |k, v|
              %tr
                %td{style: "padding-right: 20px;"}
                  %h5{style: "margin-bottom: 15px;"}= v[:label]
                %td{style: "padding-left: 20px;"}
                  %h5{style: "margin-bottom: 15px;"}
                    %i
                      - v = @game.config[k]
                      = v.is_a?(String) ? v.titleize : v
