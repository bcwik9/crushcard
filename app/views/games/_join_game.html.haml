- if !(@game_started || @is_playing)
  .join_game{style: "max-width: 300px; margin: auto;"}
    %h4{style: "margin-bottom: 10px"}
      Join game!
    = form_tag(games_add_player_path) do
      = hidden_field_tag(:id, params[:id]) # is this needed here?
      %div
        #username-input.input-group
          = text_field_tag("username", nil, class: "form-control input-lg", placeholder: "Username", required: true)
          %span.input-group-btn
            = button_tag("Join game", type: "submit", class: "btn btn-lg btn-primary", data: {disable: true})
    /= button_to 'Add Computer Player', games_add_cpu_player_path, method: :post, params: { id: params[:id] }, class: 'btn btn-lg btn-primary'
    %br
    %br
